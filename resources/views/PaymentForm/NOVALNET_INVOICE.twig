<form method="post" id="nn_invoice_form" name="nn_invoice_form" action="{{nnPaymentProcessUrl}}">
	<div class="modal-header"> 
		<button type="button" aria-label="Close" data-dismiss="modal" class="close" onClick="window.location.reload();">
			<span aria-hidden="true">x</span>
		</button> 
		<h4 class="modal-title">{{paymentName}} </h4>
	</div>
	
	<div class="modal-body">
		<div class="modal-title" style="color:#008EBF;"><b>{{trans("Novalnet::PaymentMethod.note")}}</b> {{ trans("Novalnet::PaymentMethod.dobshowingreason") }}</div><br>
		<fieldset>		
				<input type="hidden" id="paymentKey" name="paymentKey" value="{{paymentMopKey}}" />
				<input type="hidden" name="nn_invoice_valid_dob_msg" id="nn_invoice_valid_dob_msg" value="{{trans("Novalnet::PaymentMethod.doberror")}}">
				<div class="row">
					<div class="col-xs-12">
						<div class="row">
						<div data-model="nn_invoice_birthday" class="input-unit">
							
								
				  <label for="nn_invoice_birthday">{{trans("Novalnet::PaymentMethod.birthdate_label")}}*</label>
	<div class="col-sm-4"><input type="text" name="nn_date" id="nn_date" placeholder="DD" size="2" >-</div>
	<div class="col-sm-4"><input type="text" name="nn_month" id="nn_month" placeholder="MM" size="2" >-</div>
	<div class="col-sm-4"><input type="text" name="nn_year" id="nn_year" placeholder="YYYY" size="4" >-</div>
				 

						 </div>
							
					
						</div> 
					</div>
				</div> 
			
		</fieldset>
	</div>
	<div class="modal-footer">
		<button type="submit" class="btn btn-primary" id="novalnet_form_btn" onclick="">
			<i class="fa fa-check" aria-hidden="true"> </i>
			{{ trans("Novalnet::PaymentMethod.submit_button_text") }}
		</button>
	</div>
</form>

<script>
$(document).ready( function() {
	$('#nn_invoice_form').on('submit', function() {
		$('#novalnet_form_btn').attr('disabled',true);
	});
});
</script>
